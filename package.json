{
  "name": "custom-error-service",
  "version": "0.2.4",
  "description": "A toolset for NodeJS to handling Client and Server Side HTTP errors",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "sideEffects": false,
  "author": "Isidro A. Lopez G. <me@ialopezg.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ialopezg/custom-error-service.git"
  },
  "bugs": {
    "url": "https://github.com/ialopezg/custom-error-service/issues",
    "email": "me@ialopezg.com"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "echo Using TypeScript && rollup -c",
    "copy": "copyfiles -u 1 \"dist/lib/**/*\" dist/package && copyfiles package.json LICENSE README.md CHANGELOG.MD dist/package",
    "lint": "eslint 'src/**/*.ts' --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "package": "npm run build && npm run copy && npm run public && rimraf dist/lib",
    "public": "json -I -f dist/package/package.json -e 'this.private=false'",
    "version": "npm run build",
    "postversion": "git push origin HEAD && git push --tags && rimraf dist/temp"
  },
  "keywords": [
    "errors",
    "middleware",
    "api",
    "rest"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "json": "^11.0.0",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.6.3"
  },
  "publishConfig": {
    "registry":"https://npm.pkg.github.com"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=8"
  }
}
