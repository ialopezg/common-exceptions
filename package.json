{
  "name": "@ialopezg/common-exceptions",
  "version": "1.0.0",
  "description": "A toolset for NodeJS to handling Client and Server Side HTTP errors",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "browser": "lib/index.umd.js",
  "sideEffects": false,
  "author": "Isidro A. Lopez G. <me@ialopezg.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ialopezg/custom-error-service.git"
  },
  "bugs": {
    "url": "https://github.com/ialopezg/custom-error-service/issues",
    "email": "me@ialopezg.com"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist lib",
    "prebuild": "npm run clean",
    "build": "echo Using TypeScript && tsc -p tsconfig.prod.json",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint 'src/**/*.ts' --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "prepare": "husky install"
  },
  "keywords": [
    "errors",
    "middleware",
    "api",
    "rest"
  ],
  "dependencies": {
    "json": "^11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.1",
    "@types/sinon": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "chai": "^4.3.10",
    "conventional-changelog-angular": "^7.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.6.1",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^17.0.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "files": [
    "lib",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true
  }
}
