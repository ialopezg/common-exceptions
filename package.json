{
  "name": "custom-error-service",
  "version": "0.4.0",
  "description": "A toolset for NodeJS to handling Client and Server Side HTTP errors",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "browser": "lib/index.umd.js",
  "sideEffects": false,
  "author": "Isidro A. Lopez G. <me@ialopezg.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ialopezg/custom-error-service.git"
  },
  "bugs": {
    "url": "https://github.com/ialopezg/custom-error-service/issues",
    "email": "me@ialopezg.com"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "echo Using TypeScript && tsc -p tsconfig.prod.json",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint 'src/**/*.ts' --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "prepare": "husky install"
  },
  "keywords": [
    "errors",
    "middleware",
    "api",
    "rest"
  ],
  "dependencies": {
    "json": "^11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.25",
    "@types/sinon": "^10.0.12",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.3.6",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-changelog-cli": "^2.2.2",
    "coveralls": "^3.1.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^14.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.6.3"
  },
  "files": [
    "lib",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=8"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": true
  }
}
